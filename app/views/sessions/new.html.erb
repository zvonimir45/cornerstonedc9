<% provide(:title, "Log in") %>
<div class="container-fluid" id="main">
<div class="row">

  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |form| %>

      <%= form.label :email, style: "margin-top: 20px"  %>
      <%= form.email_field :email, class: 'form-control'%>

      <%= form.label :password %>
      <%= form.password_field :password, class: 'form-control' %>

      <%= form.label :remember_me, class: "checkbox inline" do %>
        <%= form.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>

      <%= form.submit "Log in", class: "btn btn-default btn-xs",
        style: "margin: 10px 0 20px 20px" %>

    <% end %>
  </div>

</div>  <!-- row -->
</div> <!-- container-fluid -->
