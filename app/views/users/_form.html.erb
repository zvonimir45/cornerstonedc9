<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    <%= render 'shared/error_messages', object: form.object %>
  <% end %>

<div class="col-md-6 col-md-offset-3">
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' , id: :user_name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, class: 'form-control' , id: :user_email %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, class: 'form-control' , id: :user_password %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, class: 'form-control' , id: :user_confirmation %>
  </div>

  <div class="actions">
    <%= form.submit yield(:button_text), class: "btn btn-default btn-xs",
      style: "margin: 20px 0 20px 20px" %>
  </div>
</div>

<% end %>
